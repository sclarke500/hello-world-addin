<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="TaskPaneApp">
  <Id>a15789f6-7e3b-4f77-92ad-5a71b3027cb1</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>HelloWorld</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Hello World"/>
  <Description DefaultValue="Hello World"/>
  <IconUrl DefaultValue="https://sclarke500.github.io/hello-world-addin/img/dmc32.png"/>
  <HighResolutionIconUrl DefaultValue="https://sclarke500.github.io/hello-world-addin/img/dmc64.png"/>
  <SupportUrl DefaultValue="https://sclarke500.github.io/hello-world-addin"/>
  <AppDomains>
    <AppDomain>https://localhost:4200</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Document"/>
  </Hosts>
  <DefaultSettings>
    <SourceLocation DefaultValue="https://sclarke500.github.io/hello-world-addin"/>
  </DefaultSettings>
  <Permissions>ReadWriteDocument</Permissions>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Document">
            <Runtimes>
        <Runtime resid="HelloWorldApp.Url" lifetime="long" />
      </Runtimes>
        <DesktopFormFactor>
          <FunctionFile resid="HelloWorldApp.Url"/>
          <ExtensionPoint xsi:type="PrimaryCommandSurface">

            <OfficeTab id="TabHome">

              <Group id="HelloWorldGroup">
                <Label resid="HelloWorldGroup.Label"/>

                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>

                <Control xsi:type="Button" id="HelloWorldButton">
                  <Label resid="helloWorldButton.Label"/>
                  <Supertip>
                    <Title resid="HelloWorldButton.Label"/>
                    <Description resid="HelloWorldButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="HelloWorldApp.Url"/>
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://sclarke500.github.io/img/dmc16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://sclarke500.github.io/img/dmc32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://sclarke500.github.io/img/dmc80.png"/>
      </bt:Images>

      <bt:Urls>

        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://go.microsoft.com/fwlink/?LinkId=276812"/>
        <bt:Url id="Commands.Url" DefaultValue="https://sclarke500.github.io"/>
        <bt:Url id="HelloWorldApp.Url" DefaultValue="https://sclarke500.github.io"/>

      </bt:Urls>

      <bt:ShortStrings>

        <bt:String id="HelloWorldGroup.Label" DefaultValue="Hello"/>
        <bt:String id="HelloWorldButton.Label" DefaultValue="World"/>

      </bt:ShortStrings>

      <bt:LongStrings>

        <bt:String id="HelloWorldButton.Tooltip" DefaultValue="Hello World Taskpane"/>

      </bt:LongStrings>

    </Resources>
  </VersionOverrides>
</OfficeApp>